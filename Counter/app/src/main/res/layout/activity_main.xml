<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.codebrat.counter.MainActivity">


    <Button
        android:id="@+id/tapCounter"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Tap Counter"
        android:textSize="20sp" />

    <Button
        android:id="@+id/touchCounter"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/tapCounter"
        android:layout_below="@+id/tapCounter"
        android:layout_marginTop="13dp"
        android:text="Touch Counter"
        android:textSize="20sp" />

    <Button
        android:id="@+id/contacts"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/tapCounter"
        android:layout_below="@+id/touchCounter"
        android:layout_marginTop="13dp"
        android:text="Contacts"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/editText2"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:text="Select to start"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
